# Courtside Backend - Production Dockerfile
FROM node:22-alpine

# Set timezone to Cambodia (UTC+7)
ENV TZ=Asia/Phnom_Penh

# Install timezone data
RUN apk add --no-cache tzdata && \
    cp /usr/share/zoneinfo/Asia/Phnom_Penh /etc/localtime && \
    echo "Asia/Phnom_Penh" > /etc/timezone

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci --only=production

# Copy source code and configuration
COPY src ./src
COPY tsconfig.json ./

# Verify no Prisma contamination (explicit check)
RUN echo "ðŸ” Checking for Prisma files..." && \
    find . -name '*prisma*' -type f 2>/dev/null | head -10 && \
    echo "âœ… Prisma check completed"

# Build the application
RUN npm run build

# Remove source files and dev dependencies to reduce image size
RUN rm -rf src tsconfig.json

# Create non-root user for security
RUN addgroup -g 1001 -S nodejs && \
    adduser -S nodejs -u 1001

# Change ownership of the app directory
RUN chown -R nodejs:nodejs /app
USER nodejs

# Expose port (Railway will set PORT env var)
EXPOSE 8080

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD node -e "require('http').get('http://localhost:8080/health', (res) => { process.exit(res.statusCode === 200 ? 0 : 1) })"

# Start the application
CMD ["npm", "start"]
